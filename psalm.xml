<?xml version="1.0"?>
<psalm
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    errorLevel="1"
    findUnusedBaselineEntry="true"
    findUnusedCode="true"
>
    <projectFiles>
        <directory name="src"/>
        <directory name="tests"/>
        <ignoreFiles>
            <directory name="vendor"/>
        </ignoreFiles>
    </projectFiles>

    <plugins>
        <pluginClass class="Psalm\PhpUnitPlugin\Plugin"/>
    </plugins>

    <issueHandlers>
        <MixedInferredReturnType>
            <errorLevel type="suppress">
                <file name="tests/Comparator/ValueObjectTest.php" />
            </errorLevel>
        </MixedInferredReturnType>

        <MixedMethodCall>
            <errorLevel type="suppress">
                <file name="src/Comparator/ValueObject.php" />
            </errorLevel>
        </MixedMethodCall>

        <PossiblyUnusedMethod>
            <errorLevel type="suppress">
                <file name="src/Comparator/CollatorConstructor.php" />
            </errorLevel>
        </PossiblyUnusedMethod>

        <DeprecatedClass>
            <errorLevel type="suppress">
                <file name="tests/Comparator/ValueObjectTest.php" />
                <file name="tests/ComparatorFactory/ValueObjectTest.php" />
                <file name="tests/Comparator/ValueObjectWithPropertyTest.php" />
                <file name="tests/Comparator/ValueObjectWithMethodTest.php" />
                <file name="src/ComparatorFactory/ValueObject.php" />
                <file name="src/ComparatorFactory/SimpleCollator.php" />
                <file name="tests/ComparatorFactory/SimpleCollatorTest.php" />
            </errorLevel>
        </DeprecatedClass>

        <DeprecatedInterface>
            <errorLevel type="suppress">
                <file name="src/ComparatorFactory/SimpleCollator.php" />
                <file name="tests/ComparatorFactory/Fixtures/Foo.php" />
            </errorLevel>
        </DeprecatedInterface>
    </issueHandlers>
</psalm>
